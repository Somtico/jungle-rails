<div class="container">
  <div class="row my-4">
    <div class="col">
      <h1>Admin Dashboard</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <p class="card-text">Total Products: <%= @products_count %></p>
          <a href="<%= admin_products_path %>" class="btn btn-primary">View Products</a>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <p class="card-text">Total Categories: <%= @categories_count %></p>
          <a href="<%= admin_categories_path %>" class="btn btn-primary">View Categories</a>
        </div>
      </div>
    </div>
  </div>
</div>